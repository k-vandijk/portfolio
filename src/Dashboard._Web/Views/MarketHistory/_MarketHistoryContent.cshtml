@inject IStringLocalizer<SharedResource> SharedLocalizer
@model MarketHistoryViewModel
@{
    var currentTicker = Context.Request.Query["ticker"].ToString();
}

<div class="row h-15vh">
    <div class="col-12 col-xs-12 col-md-12 col-lg-6 col-xl-4 mb-3">
        <!-- Mobile: Filter toggle button -->
        <button class="btn btn-filter-toggle d-md-none w-100 mb-3" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#marketHistoryFilters" 
                aria-expanded="false" 
                aria-controls="marketHistoryFilters"
                aria-label="Toggle filter options">
            <span class="filter-toggle-text">Filters</span>
            <i class="fas fa-filter ms-2"></i>
        </button>

        <!-- Filter card: h-100 on desktop only, d-md-block to always show on desktop -->
        <div class="card collapse d-md-block h-md-100" id="marketHistoryFilters">
            <div class="card-body d-flex align-items-center h-md-100">
                <div class="btn-group w-100" role="group">
                    @foreach (var t in Model.Tickers)
                    {
                        <a asp-controller="MarketHistory" asp-action="Index" asp-route-ticker="@t"
                           class="btn btn-ticker px-3 py-2 @(t == currentTicker ? "active" : "")">
                            @t
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-xs-12 col-md-12 col-lg-6 col-xl-8 mb-3 d-flex">
        <div class="row flex-fill">
            <div class="col-4">
                <partial name="Components/_Metric" model='new MetricViewModel { Title = SharedLocalizer["CurrentPrice"], Value = Model.CurrentPriceString }' />
            </div>
            <div class="col-4">
                <partial name="Components/_Metric" model='new MetricViewModel { Title = SharedLocalizer["InterestEur"], Value = Model.InterestString }' />
            </div>
            <div class="col-4">
                <partial name="Components/_Metric" model='new MetricViewModel { Title = SharedLocalizer["InterestPct"], Value = Model.InterestPercentageString }' />
            </div>
        </div>
    </div>

</div>

<div class="row h-80vh">
    <div class="col-12 mb-3">
        <partial name="Components/_LineChart" model="Model.LineChart" />
    </div>
</div>